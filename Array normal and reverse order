#include <stdio.h> 
int main() { 
    int size; 
    printf("Array size : "); 
    scanf("%d", &size); 
    int stu[size];
    //reading the elements of an array 
    printf("Enter roll number of %d students : ", size); 
    for(int i=0; i<size; i++) { 
        scanf("%d", &stu[i]); 
    }  
    //displaying the elements of an array 
    for(int i=0; i<size; i++) { 
        printf("%d \t", stu[i]); //when size is not mentioned
    }   
    // Displaying roll numbers in reverse order 
    printf("\n\nRoll numbers in reverse order:\n"); 
    for(int i = size - 1; i >= 0; i--) { 
        printf("%d\t", stu[i]); 
    }  
     
    return 0; 
}
