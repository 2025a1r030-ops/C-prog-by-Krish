#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() { 
    int units;
    float amount = 0, totalBill;

    
    scanf("%d", &units);


    if (units <= 50)
        amount = units * 0.50;
    else if (units <= 150)
        amount = (50 * 0.50) + ((units - 50) * 0.75);
    else if (units <= 250)
        amount = (50 * 0.50) + (100 * 0.75) + ((units - 150) * 1.20);
    else
        amount = (50 * 0.50) + (100 * 0.75) + (100 * 1.20) + ((units - 250) * 1.50);


    totalBill = amount + (amount * 0.20);

    
    printf("%.2f", totalBill);


      
    return 0;
}
