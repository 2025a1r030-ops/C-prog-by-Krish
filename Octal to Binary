#include <stdio.h> 
//octal to binary 

int octTodec(int octNum){ 
int decNum = 0, base = 1; 
 while(octNum != 0){ 
        int rem = octNum % 10; 
        decNum += rem * base; 
        base *= 8; 
        octNum /= 10;
    }  
    return decNum;
} 

int decTobin(int decNum){ 
    int bin = 0, place = 1; 
    while(decNum != 0){ 
        int rem = decNum%2; 
        bin += rem * place; 
        place *= 10; 
        decNum /= 2;
    } 
    return bin;
}

int main(){ 
    int num; 
    printf("Enter the Octal Number: "); 
    scanf("%d", &num); 

    int binary = decTobin(octTodec(num)); 

    printf("Binary Number = %d", binary);

return 0; 
}
