#include <stdio.h> 

int main() { 
    //area and perimeter of circle
    float length, breadth, side, radius, area, perimeter; 

    printf("Enter the radius :"); 
    scanf("%f", &radius); 
     area = 3.14 * radius * radius; 
     perimeter = 2 * 3.14 * radius;  
    printf("calculate the area : %f \n", area); 
    printf("calculate the perimeter : %f \n", perimeter);
    
    //area and perimeter of rectangle 
    printf("Enter the length :"); 
    scanf("%f", &length); 
    printf("Enter the width :"); 
    scanf("%f", &breadth); 
     area = length * breadth; 
    perimeter = 2*(length + breadth); 
    printf("calculate the area : %f \n", area); 
    printf("calculate the perimeter : %f \n", perimeter); 

    //area and perimeter of square 
    printf("enter the side :"); 
    scanf("%f", &side); 
    area = side * side; 
    perimeter = 4 * side; 

    printf("calculate the area : %f \n", area); 
    printf("calculate the perimeter : %f \n", perimeter); 

    

    return 0;
} 
